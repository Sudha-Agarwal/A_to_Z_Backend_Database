package com.learning;

public class Person {
	//attributes/state
	String name; //2 bytes
	int age; //4 bytes
	float salary;
	
	//behavior method
	void speak() {
		System.out.println("Person is speaking with name"  + name);		
		
	}
	void eating() {
		System.out.println("person is eating");
	}
	
	public static void main(String args[]) {
		//we create an object of class person using a keyword called 'new';
		Person obj1 = new Person();
		obj1.age = 30;
		obj1.name = "Sudha";
		obj1.salary = 2000.88;
		
		Person obj2 = new Person();
		obj2.age = 40;
		obj2.name = "ABC";
		
		obj1.speak();// to call behavior method
		obj2.speak();
		
		
		
	}
}


