package com.learning;

public class Person {
	//attributes/state
	String name; //2 bytes
	int age; //4 bytes
	float salary;
	char gender;
	boolean isAdmin;
	
	//behavior method
	void speak() {
		System.out.println("Person is speaking with name"  + name);		
		
	}
	void eating() {
		System.out.println("person is eating");
	}
	
	public static void main(String args[]) {
		//we create an object of class person using a keyword called 'new';
		Person obj1 = new Person();
		obj1.age = 30;
		obj1.name = "Sudha";
		obj1.salary = 2000.88f;
		obj1.gender = 'F';
		obj1.isAdmin = true;
		
		Person obj2 = new Person();
		obj2.age = 40;
		obj2.name = "ABC";
		
		obj1.speak();// to call behavior method
		obj2.speak();
		
		//float f1 = 45.67f;
		double d1 = 12e4;
		
		int x = 10;
		int y = 20;
		
		//Arithmetic opertaor
		x + y;
		x -y;
		x/y;
		x*y;
		x%y;
		 x++;
		 y--;
		 
		 //Assignment Operators
		 x = x + 1;
		 x += 1;
		 x-=2;
		 x *= 3;
		 
		 //comparision operator
		 >, >=, <, <=, ==, !=;
		 x > y; //either true or false
				 
		 //Logical Operators
		 &&, ||, !
		
		 
		 
		 
		
		
		
		
		
	}
}


